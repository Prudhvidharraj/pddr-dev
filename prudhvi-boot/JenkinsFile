pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'SonarQube'
        SONAR_PROJECT_KEY = 'prudhvi-test'
        ECR_REGISTRY = '448049787674.dkr.ecr.us-west-1.amazonaws.com'  // Registry URL without repo
        ECR_REPOSITORY = 'prudhvi-top'  // Repository name
        ECR_REPO_URI = "${ECR_REGISTRY}/${ECR_REPOSITORY}"  // Full image URI
        AWS_REGION = 'us-west-1'
        TRIVY_IMAGE = 'aquasec/trivy:latest'
        PROJECT_DIR = 'pddr-dev/prudhvi-boot'
        RECIPIENT_EMAIL = 'nandhuraj0303@gmail.com'
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'main', 
                    url: 'https://github.com/Prudhvidharraj/pddr-dev.git'
            }
        }

        stage('Build & Test') {
            steps {
                dir(env.PROJECT_DIR) {
                    sh 'mvn clean install -DskipTests=true'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir(env.PROJECT_DIR) {
                    withSonarQubeEnv(env.SONARQUBE_SERVER) {
                        sh """
                        mvn sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.projectName=${SONAR_PROJECT_KEY} \
                        -Dsonar.host.url=http://54.183.40.137:9000 \
                        -Dsonar.projectVersion=${BUILD_NUMBER}
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir(env.PROJECT_DIR) {
                    sh """
                    docker build \
                    -t ${ECR_REPO_URI}:${BUILD_NUMBER} \
                    -t ${ECR_REPO_URI}:latest .
                    """
                }
            }
        }

        stage('Trivy Scan') {
            steps {
                sh script: """
                docker run --rm \
                -v /var/run/docker.sock:/var/run/docker.sock \
                ${TRIVY_IMAGE} \
                image \
                --exit-code 1 \
                --severity HIGH,CRITICAL \
                --quiet \
                ${ECR_REPO_URI}:${BUILD_NUMBER}
                """, returnStatus: true
            }
        }

        // Removed explicit 'Login to ECR' stage; handled by docker.withRegistry

        stage('Push to ECR') {
            steps {
                script {
                    // Authenticate and push using Jenkins Docker/ECR plugins
                    docker.withRegistry("https://${ECR_REGISTRY}", "ecr:${AWS_REGION}:aws-credentials") {
                        sh "docker push ${ECR_REPO_URI}:${BUILD_NUMBER}"
                        sh "docker push ${ECR_REPO_URI}:latest"
                    }
                }
            }
        }
    }

    post {
        always {
            sh 'docker image prune -f --filter "dangling=true"'  // Cleanup dangling images
            cleanWs()
        }
        success {
            emailext(
                subject: "SUCCESS: Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                <p>SUCCESS: Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
                <p>Check console output at: <a href="${env.BUILD_URL}">${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                """,
                to: env.RECIPIENT_EMAIL,
                mimeType: 'text/html'
            )
        }
        failure {
            emailext(
                subject: "FAILED: Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                body: """
                <p>FAILED: Pipeline '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
                <p>Check console output at: <a href="${env.BUILD_URL}">${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>
                <p>Error details in attached build log</p>
                """,
                to: env.RECIPIENT_EMAIL,
                mimeType: 'text/html',
                attachLog: true
            )
            archiveArtifacts artifacts: '**/target/*.log', allowEmptyArchive: true
        }
    }
}